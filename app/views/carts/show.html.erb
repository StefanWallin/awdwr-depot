<% if notice != nil  %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart</h2>
<table>
  <tr>
    <th>Product</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Sum</th>
  </tr>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.product.title %></td>
      <td><%= number_to_currency(item.product.price, :unit => "kr", :separator => ",", :delimiter => " ", :precision => 0, :format => "%n %u") %></td>
      <td> &times; <%= item.quantity %> = </td>
      <td class="item_price"><%= number_to_currency(item.total_price, :unit => "kr", :separator => ",", :delimiter => " ", :precision => 0, :format => "%n %u") %></td>
    </tr>
  <% end %>
  <tr class="total_line">
    <td colspan="3">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price, :unit => "kr", :separator => ",", :delimiter => " ", :precision => 0, :format => "%n %u") %></td>
  </tr>
</table>
<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>
